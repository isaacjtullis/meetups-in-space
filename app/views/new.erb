<h1>Add Meetup</h1>

<form action="/meetups" method="post">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="meetup[name]" value="<%= @meetup.name %>">
 </div>
 <div>
    <label for="location">Location:</label>
    <input type="text" id="location" name="meetup[location]" value="<%= @meetup.location %>">

  </div>
    <label for="description">Description:</label>
    <input type="text" id="description" name="meetup[description]" value="<%= @meetup.description %>">
    <%if @current_user != nil %>
      <input type="hidden" name="meetup[user_id]" value="<%= @meetup.user_id = @current_user.id%>">
    <% end %>


    <input type="submit" value="Add Meetup">
    </form>
  </div>

<% if @error != nil %>
    <% @error.each do |error| %>
      <%= "ERROR: " + error + " \n" %>
    <% end %>
  <% end %>

<% if @login != nil %>
  <%= @login %>
<% end %>
